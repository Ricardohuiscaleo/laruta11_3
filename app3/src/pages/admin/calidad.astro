    <div class="container">
        <header class="text-center mb-10">
            <h1 class="text-3xl md:text-5xl font-bold text-gray-800 mb-2">Control de Calidad</h1>
            <p class="text-lg md:text-xl text-gray-600">Checklist diario para mantener los est√°ndares de calidad</p>
        </header>

        <div class="role-selector">
            <button class="role-btn active" onclick="selectRole('planchero')" id="btn-planchero">üë®üç≥ Maestro Planchero</button>
            <button class="role-btn" onclick="selectRole('cajero')" id="btn-cajero">üí∞ Cajero</button>
        </div>

        <div class="mb-8">
            <div class="flex justify-between items-center mb-2">
                <span class="text-gray-700 font-medium">Cumplimiento</span>
                <span id="progress-percentage" class="text-lg font-bold text-gray-800">0%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2.5">
                <div id="progress-bar" class="bg-blue-600 h-2.5 rounded-full progress-bar" style="width: 0%;"></div>
            </div>
        </div>

        <div id="checklist-container"></div>

        <button id="submit-btn" class="w-full mt-8 px-6 py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition-colors">‚úÖ Enviar Checklist</button>
    </div>

    <script>
        var checklists = { planchero: [], cajero: [] };
        var currentRole = 'planchero';
        var uploadedImages = {};

        (window as any).toggleAccordion = function(id) {
            var content = document.getElementById('content-' + id);
            var icon = document.getElementById('icon-' + id);
            if (!content || !icon) return;
            var isCollapsed = content.style.maxHeight === '0px' || !content.style.maxHeight;
            
            if (isCollapsed) {
                content.style.maxHeight = content.scrollHeight + 'px';
                icon.classList.add('rotate');
            } else {
                content.style.maxHeight = '0';
                icon.classList.remove('rotate');
            }
        };

        (window as any).selectRole = function(role) {
            currentRole = role;
            var buttons = document.querySelectorAll('.role-btn');
            for (var i = 0; i < buttons.length; i++) {
                buttons[i].classList.remove('active');
            }
            var btn = document.getElementById('btn-' + role);
            if (btn) btn.classList.add('active');
            loadQuestions();
        };

        function loadQuestions() {
            fetch('/api/get_questions.php?role=' + currentRole)
                .then(function(response) { return response.json(); })
                .then(function(result) {
                    if (result.success) {
                        checklists[currentRole] = result.questions.map(function(q) {
                            return {
                                id: q.id,
                                question: q.question,
                                requiresPhoto: q.requires_photo == 1
                            };
                        });
                        renderChecklist();
                    }
                })
                .catch(function(error) {
                    console.error('Error cargando preguntas:', error);
                });
        }

        function renderChecklist() {
            var container = document.getElementById('checklist-container');
            if (!container) return;
            var items = checklists[currentRole] || [];
            
            var sections = [
                { title: '1. Checklist de Pre-Servicio', start: 0, end: 5 },
                { title: '2. Checklist Durante el Servicio', start: 5, end: 9 },
                { title: '3. Checklist de Post-Servicio', start: 9, end: 14 }
            ];
            
            var html = '';
            for (var s = 0; s < sections.length; s++) {
                var section = sections[s];
                var sectionItems = items.slice(section.start, section.end);
                
                html += '<div class="accordion-item py-6 px-0">';
                html += '<div class="flex justify-between items-center cursor-pointer px-6" onclick="toggleAccordion(\'section-' + s + '\')">';
                html += '<h2 class="text-lg md:text-2xl font-semibold text-gray-800">' + section.title + '</h2>';
                html += '<svg class="icon w-6 h-6 text-gray-500" id="icon-section-' + s + '" fill="none" stroke="currentColor" viewBox="0 0 24 24">';
                html += '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>';
                html += '</svg></div>';
                html += '<div class="overflow-hidden transition-all duration-300 ease-in-out max-h-0 mt-4 pt-4 px-6" id="content-section-' + s + '">';
                html += '<ul class="space-y-4 text-gray-700">';
                
                for (var i = 0; i < sectionItems.length; i++) {
                    var item = sectionItems[i];
                    html += '<li class="flex flex-col space-y-2">';
                    html += '<div class="flex flex-col md:flex-row md:items-center md:space-x-4 space-y-2 md:space-y-0 w-full">';
                    html += '<span class="flex-1 text-base">' + item.question + '</span>';
                    html += '<div class="flex items-center space-x-4">';
                    html += '<input type="radio" id="q' + item.id + '_yes" name="q' + item.id + '" value="yes" onchange="updateProgress()">';
                    html += '<label for="q' + item.id + '_yes" class="font-medium">S√≠</label>';
                    html += '<input type="radio" id="q' + item.id + '_no" name="q' + item.id + '" value="no" data-state="no" onchange="updateProgress()">';
                    html += '<label for="q' + item.id + '_no" class="font-medium">No</label>';
                    html += '</div></div>';
                    html += '<textarea id="obs' + item.id + '" placeholder="Comentarios..." class="w-full p-2 rounded-md border border-gray-300 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>';
                    
                    if (item.requiresPhoto) {
                        html += '<button type="button" onclick="addPhoto(' + item.id + ')" id="addBtn' + item.id + '" class="flex-shrink-0 px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">A√±adir Foto</button>';
                        html += '<input type="file" id="photo' + item.id + '" accept="image/*" class="hidden" onchange="handleImageUpload(this, ' + item.id + ')">';
                        html += '<div id="photoGrid' + item.id + '" class="grid grid-cols-2 gap-2 mt-2" style="display: none;"></div>';
                    }
                    
                    html += '</li>';
                }
                
                html += '</ul></div></div>';
            }
            
            container.innerHTML = html;
            updateProgress();
            loadSavedData();
            addEventListeners();
        }

        function updateProgress() {
            var items = checklists[currentRole] || [];
            var completedTasks = 0;
            
            for (var i = 0; i < items.length; i++) {
                var yesRadio = document.getElementById('q' + items[i].id + '_yes');
                if (yesRadio && (yesRadio as HTMLInputElement).checked) {
                    completedTasks++;
                }
            }
            
            var percentage = items.length > 0 ? Math.round((completedTasks / items.length) * 100) : 0;
            var progressText = document.getElementById('progress-percentage');
            var progressBar = document.getElementById('progress-bar');
            if (progressText) progressText.textContent = percentage + '%';
            if (progressBar) progressBar.style.width = percentage + '%';
        }

        function loadSavedData() {
            var items = checklists[currentRole] || [];
            for (var i = 0; i < items.length; i++) {
                var item = items[i];
                var taskId = 'task_' + currentRole + '_' + item.id;
                var savedState = JSON.parse(localStorage.getItem(taskId) || '{}');
                
                if (savedState.status) {
                    var radio = document.getElementById('q' + item.id + '_' + savedState.status);
                    if (radio) (radio as HTMLInputElement).checked = true;
                }
                
                if (savedState.comment) {
                    var textarea = document.getElementById('obs' + item.id);
                    if (textarea) (textarea as HTMLTextAreaElement).value = savedState.comment;
                }
                
                if (savedState.photos) {
                    uploadedImages[item.id] = savedState.photos;
                    updatePhotoGrid(item.id);
                }
            }
        }

        function saveTaskState(itemId, field, value) {
            var taskId = 'task_' + currentRole + '_' + itemId;
            var savedState = JSON.parse(localStorage.getItem(taskId) || '{}');
            savedState[field] = value;
            localStorage.setItem(taskId, JSON.stringify(savedState));
        }

        function addEventListeners() {
            var radios = document.querySelectorAll('input[type="radio"]');
            for (var i = 0; i < radios.length; i++) {
                radios[i].addEventListener('change', function(e) {
                    var target = e.target as HTMLInputElement;
                    if (target && target.name) {
                        var itemId = target.name.replace('q', '');
                        saveTaskState(itemId, 'status', target.value);
                        updateProgress();
                    }
                });
            }

            var textareas = document.querySelectorAll('textarea');
            for (var i = 0; i < textareas.length; i++) {
                textareas[i].addEventListener('input', function(e) {
                    var target = e.target as HTMLTextAreaElement;
                    if (target && target.id) {
                        var itemId = target.id.replace('obs', '');
                        saveTaskState(itemId, 'comment', target.value);
                    }
                });
            }
        }

        (window as any).addPhoto = function(questionId) {
            if (!uploadedImages[questionId]) uploadedImages[questionId] = [];
            if (uploadedImages[questionId].length >= 2) {
                alert('M√°ximo 2 fotos por pregunta');
                return;
            }
            document.getElementById('photo' + questionId)?.click();
        };

        (window as any).openPhoto = function(url) {
            window.open(url, '_blank');
        };

        (window as any).removePhoto = function(questionId, index) {
            if (!uploadedImages[questionId]) return;
            uploadedImages[questionId].splice(index, 1);
            updatePhotoGrid(questionId);
            saveTaskState(questionId, 'photos', uploadedImages[questionId]);
        };

        function updatePhotoGrid(questionId) {
            var grid = document.getElementById('photoGrid' + questionId);
            var addBtn = document.getElementById('addBtn' + questionId);
            if (!grid || !uploadedImages[questionId]) return;
            
            var photos = uploadedImages[questionId];
            if (photos.length === 0) {
                grid.style.display = 'none';
                if (addBtn) addBtn.textContent = 'A√±adir Foto';
                return;
            }
            
            grid.style.display = 'grid';
            if (addBtn) addBtn.textContent = photos.length >= 2 ? 'M√°ximo 2 fotos' : 'A√±adir Foto (' + photos.length + '/2)';
            if (addBtn) (addBtn as HTMLButtonElement).disabled = photos.length >= 2;
            
            var html = '';
            for (var i = 0; i < photos.length; i++) {
                html += '<div class="relative bg-gray-200 rounded-lg h-20 overflow-hidden cursor-pointer" onclick="openPhoto(\'' + photos[i] + '\')">'
                html += '<img src="' + photos[i] + '" class="w-full h-full object-cover">';
                html += '<button onclick="event.stopPropagation(); removePhoto(' + questionId + ', ' + i + ')" class="absolute top-1 right-1 bg-red-500 text-white rounded-full w-5 h-5 text-xs flex items-center justify-center hover:bg-red-600">√ó</button>';
                html += '</div>';
            }
            grid.innerHTML = html;
        }

        (window as any).handleImageUpload = function(input, questionId) {
            var file = input.files && input.files[0];
            if (!file) return;
            
            if (!uploadedImages[questionId]) uploadedImages[questionId] = [];
            if (uploadedImages[questionId].length >= 2) return;
            
            // Comprimir imagen
            compressImage(file, function(compressedFile) {
                // Subir a AWS S3
                uploadToAWS(compressedFile, questionId, function(awsUrl) {
                    if (awsUrl) {
                        uploadedImages[questionId].push(awsUrl);
                        updatePhotoGrid(questionId);
                        saveTaskState(questionId, 'photos', uploadedImages[questionId]);
                    }
                });
            });
            
            input.value = '';
        }
        
        function compressImage(file, callback) {
            var canvas = document.createElement('canvas');
            var ctx = canvas.getContext('2d');
            var img = new Image();
            
            if (!ctx) {
                callback(file);
                return;
            }
            
            img.onload = function() {
                var maxWidth = 800;
                var maxHeight = 600;
                var ratio = Math.min(maxWidth / img.width, maxHeight / img.height);
                
                canvas.width = img.width * ratio;
                canvas.height = img.height * ratio;
                
                if (ctx) {
                    ctx.drawImage(img, 0, 0, canvas.width, canvas.height);
                }
                
                canvas.toBlob(function(blob) {
                    callback(blob || file);
                }, 'image/jpeg', 0.8);
            };
            
            img.src = URL.createObjectURL(file);
        }
        
        function uploadToAWS(file, questionId, callback) {
            var formData = new FormData();
            formData.append('image', file);
            formData.append('folder', 'quality-evidence');
            formData.append('prefix', 'q' + questionId + '_' + Date.now());
            
            fetch('/api/upload_image.php', {
                method: 'POST',
                body: formData
            })
            .then(function(response) { return response.json(); })
            .then(function(result) {
                if (result.success) {
                    callback(result.url);
                } else {
                    callback(null);
                }
            })
            .catch(function() {
                callback(null);
            });
        }

        var submitBtn = document.getElementById('submit-btn');
        if (submitBtn) {
            submitBtn.addEventListener('click', function() {
                var items = checklists[currentRole] || [];
                var responses = {};
                
                for (var i = 0; i < items.length; i++) {
                    var item = items[i];
                    var yesRadio = document.getElementById('q' + item.id + '_yes');
                    var noRadio = document.getElementById('q' + item.id + '_no');
                    var observations = document.getElementById('obs' + item.id);
                    
                    responses[item.id] = {
                        question: item.question,
                        answer: yesRadio && (yesRadio as HTMLInputElement).checked ? 'si' : (noRadio && (noRadio as HTMLInputElement).checked ? 'no' : ''),
                        observations: observations && (observations as HTMLTextAreaElement).value || '',
                        photos: uploadedImages[item.id] || []
                    };
                }
                
                fetch('/api/save_checklist.php', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        role: currentRole,
                        responses: responses
                    })
                })
                .then(function(response) { return response.json(); })
                .then(function(result) {
                    if (result.success) {
                        alert('‚úÖ Checklist enviado correctamente');
                        var items = checklists[currentRole] || [];
                        for (var i = 0; i < items.length; i++) {
                            var taskId = 'task_' + currentRole + '_' + items[i].id;
                            localStorage.removeItem(taskId);
                        }
                        location.reload();
                    } else {
                        alert('‚ùå Error: ' + result.error);
                    }
                })
                .catch(function(error) {
                    alert('‚ùå Error enviando checklist');
                });
            });
        }

        document.addEventListener('DOMContentLoaded', function() {
            loadQuestions();
        });
    </script>

