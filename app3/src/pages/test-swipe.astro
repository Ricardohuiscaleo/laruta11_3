    <!-- Modal -->
    <div class="modal-overlay" id="modalOverlay">
        <div class="modal-content" id="modalContent">
            <div class="modal-header" id="modalHeader">
                <div class="drag-handle"></div>
                <h2 class="modal-title">Tu Pedido (3) ‚Ä¢ TOTAL $15.000</h2>
