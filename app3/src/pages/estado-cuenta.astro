const user_id = Astro.url.searchParams.get('user_id');
if (!user_id) {
  return Astro.redirect('/');
}
---
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Estado de Cuenta - La Ruta 11</title>
</head>
<body class="bg-gray-50">
    <div class="max-w-4xl mx-auto p-4 md:p-6">
        <div id="loading" class="text-center py-20">
            <div class="animate-spin w-12 h-12 border-4 border-orange-500 border-t-transparent rounded-full mx-auto"></div>
            <p class="text-gray-600 mt-4">Cargando estado de cuenta...</p>
        </div>

        <div id="content" class="hidden">
            <!-- Header -->
            <div class="bg-white rounded-lg shadow-md p-6 mb-6">
                <div class="flex items-center justify-between mb-4">
                    <img src="https://laruta11-images.s3.amazonaws.com/menu/logo-optimized.png" alt="La Ruta 11" class="w-16 h-16">
                    <div class="text-right">
                        <h1 class="text-2xl font-bold text-gray-800">Estado de Cuenta</h1>
                        <p class="text-sm text-gray-600">Cr√©dito RL6</p>
                    </div>
                </div>
                
                <div class="border-t pt-4">
                    <h2 id="userName" class="text-xl font-bold text-gray-800"></h2>
                    <p id="userInfo" class="text-sm text-gray-600"></p>
                    <p id="userEmail" class="text-sm text-gray-500"></p>
                </div>
            </div>

            <!-- Resumen -->
            <div class="bg-gradient-to-r from-orange-500 to-red-600 rounded-lg shadow-md p-6 mb-6 text-white">
                <h3 class="text-lg font-bold mb-4">üìä Resumen de Cr√©dito</h3>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    <div>
                        <p class="text-sm opacity-90">Cr√©dito Total</p>
                        <p id="creditoTotal" class="text-2xl font-bold"></p>
                    </div>
                    <div>
                        <p class="text-sm opacity-90">Consumido</p>
                        <p id="creditoUsado" class="text-2xl font-bold"></p>
                    </div>
                    <div>
                        <p class="text-sm opacity-90">Disponible</p>
                        <p id="creditoDisponible" class="text-2xl font-bold text-green-300"></p>
                    </div>
                    <div>
                        <p class="text-sm opacity-90">Saldo a Pagar</p>
                        <p id="saldoPagar" class="text-2xl font-bold text-yellow-300"></p>
                    </div>
                </div>
            </div>

            <!-- Transacciones -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-bold text-gray-800">üìã Historial de Transacciones</h3>
                    <span id="totalTx" class="text-sm text-gray-600"></span>
                </div>
                
                <div id="transactions" class="space-y-3"></div>
                
                <div id="noTransactions" class="hidden text-center py-8 text-gray-400">
                    No hay transacciones registradas
                </div>
            </div>

            <!-- Footer -->
            <div class="mt-6 text-center text-sm text-gray-500">
                <p>üìç Yumbel 2629, Arica, Chile</p>
                <p>üìû Ventas: +56 9 3622 7422 | üõ†Ô∏è Soporte: +56 9 4539 2581</p>
                <p>üìß saboresdelaruta11@gmail.com</p>
                <p class="mt-2">¬© {new Date().getFullYear()} La Ruta 11 SpA</p>
            </div>
        </div>
    </div>

    <script define:vars={{ user_id }}>
        async function loadStatement() {
            try {
                const response = await fetch(`/api/rl6/get_statement.php?user_id=${user_id}`);
                const data = await response.json();
                
                if (!data.success) {
                    alert('Error: ' + data.error);
                    return;
                }

                const { user, transactions } = data;

                // Usuario
                document.getElementById('userName').textContent = user.nombre;
                document.getElementById('userInfo').textContent = `${user.grado_militar} - ${user.unidad_trabajo}`;
                document.getElementById('userEmail').textContent = user.email;

                // Resumen
                document.getElementById('creditoTotal').textContent = '$' + user.credito_total.toLocaleString();
                document.getElementById('creditoUsado').textContent = '$' + user.credito_usado.toLocaleString();
                document.getElementById('creditoDisponible').textContent = '$' + user.credito_disponible.toLocaleString();
                document.getElementById('saldoPagar').textContent = '$' + user.credito_usado.toLocaleString();

                // Transacciones
                document.getElementById('totalTx').textContent = `${transactions.length} transacciones`;
                
                if (transactions.length === 0) {
                    document.getElementById('noTransactions').classList.remove('hidden');
                } else {
                    const container = document.getElementById('transactions');
                    container.innerHTML = transactions.map(tx => {
                        const fecha = new Date(tx.fecha);
                        const fechaStr = fecha.toLocaleDateString('es-CL', { day: '2-digit', month: 'short', year: 'numeric' });
                        const horaStr = fecha.toLocaleTimeString('es-CL', { hour: '2-digit', minute: '2-digit' });
                        
                        return `
                            <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50 transition">
                                <div class="flex justify-between items-start">
                                    <div class="flex-1">
                                        <div class="flex items-center gap-2 mb-1">
                                            <span class="text-2xl">üõí</span>
                                            <div>
                                                <p class="font-bold text-gray-800">Compra #${tx.id}</p>
                                                <p class="text-xs text-gray-500">${fechaStr} ${horaStr}</p>
                                            </div>
                                        </div>
                                        <p class="text-sm text-gray-600 mt-2">${tx.descripcion}</p>
                                        <div class="flex gap-2 mt-2">
                                            <span class="text-xs px-2 py-1 rounded ${tx.estado === 'completado' ? 'bg-green-100 text-green-700' : 'bg-yellow-100 text-yellow-700'}">${tx.estado}</span>
                                            <span class="text-xs px-2 py-1 rounded bg-blue-100 text-blue-700">${tx.tipo_pedido || 'local'}</span>
                                        </div>
                                    </div>
                                    <div class="text-right">
                                        <p class="text-lg font-bold text-red-600">-$${tx.monto.toLocaleString()}</p>
                                    </div>
                                </div>
                            </div>
                        `;
                    }).join('');
                }

                document.getElementById('loading').classList.add('hidden');
                document.getElementById('content').classList.remove('hidden');
            } catch (error) {
                alert('Error al cargar estado de cuenta');
                console.error(error);
            }
        }

        loadStatement();
    </script>

    <style>
