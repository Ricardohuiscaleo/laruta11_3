// Modal deslizante para editar productos
---

<style>
  .product-modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 9998;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }
  
  .product-modal-overlay.active {
    opacity: 1;
    visibility: visible;
  }
  
  .product-modal {
    position: fixed;
    top: 0;
    right: -100%;
    width: 90%;
    max-width: 1400px;
    height: 100vh;
    background: #fafafa;
    z-index: 9999;
    overflow-y: auto;
    transition: right 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: -4px 0 24px rgba(0, 0, 0, 0.15);
  }
  
  .product-modal.active {
    right: 0;
  }
  
  .modal-header {
    position: sticky;
    top: 0;
    background: #ffffff;
    border-bottom: 1px solid #e5e5e5;
    padding: 16px 24px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    z-index: 10;
  }
  
  .modal-title {
    font-size: 18px;
    font-weight: 600;
    color: #0a0a0a;
  }
  
  .modal-close-btn {
    background: #f5f5f5;
    border: 1px solid #e5e5e5;
    border-radius: 6px;
    padding: 8px 16px;
    font-size: 14px;
    cursor: pointer;
    transition: all 0.2s;
  }
  
  .modal-close-btn:hover {
    background: #e5e5e5;
  }
  
  .modal-content {
    padding: 24px;
  }
  
  .form-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
    margin-bottom: 16px;
  }
  
  .form-group {
    margin-bottom: 16px;
  }
  
  .form-group.full {
    grid-column: 1 / -1;
  }
  
  .label {
    display: block;
    margin-bottom: 6px;
    font-weight: 500;
    font-size: 13px;
    color: #0a0a0a;
  }
  
  .input {
    width: 100%;
    padding: 10px 12px;
    border: 1px solid #e5e5e5;
    border-radius: 6px;
    font-size: 14px;
    transition: border-color 0.2s;
  }
  
  .input:focus {
    outline: none;
    border-color: #0a0a0a;
  }
  
  .textarea {
    min-height: 80px;
    resize: vertical;
  }
  
  .btn {
    padding: 10px 20px;
    border-radius: 6px;
    border: none;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
  }
  
  .btn-primary {
    background: #0a0a0a;
    color: #ffffff;
  }
  
  .btn-primary:hover {
    background: #333;
  }
  
  .btn-secondary {
    background: #f5f5f5;
    color: #0a0a0a;
    border: 1px solid #e5e5e5;
  }
  
  .btn-secondary:hover {
    background: #e5e5e5;
  }
  
  .modal-actions {
    position: sticky;
    bottom: 0;
    background: #ffffff;
    border-top: 1px solid #e5e5e5;
    padding: 16px 24px;
    display: flex;
    gap: 12px;
    justify-content: flex-end;
  }
  
  .tabs {
    display: flex;
    gap: 8px;
    margin-bottom: 24px;
    border-bottom: 1px solid #e5e5e5;
  }
  
  .tab {
    padding: 12px 20px;
    background: none;
    border: none;
    border-bottom: 2px solid transparent;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    color: #666;
    transition: all 0.2s;
  }
  
  .tab:hover {
    color: #0a0a0a;
  }
  
  .tab.active {
    color: #0a0a0a;
    border-bottom-color: #0a0a0a;
  }
  
  .tab-content {
    display: none;
  }
  
  .tab-content.active {
    display: block;
  }
  
  @media (max-width: 768px) {
    .product-modal {
      width: 100%;
      max-width: 100%;
    }
    
    .form-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="product-modal-overlay" id="productModalOverlay"></div>
<div class="product-modal" id="productModal">
  <div class="modal-header">
    <h2 class="modal-title" id="modalTitle">Editar Producto</h2>
    <button class="modal-close-btn" id="closeModalBtn">‚úï Cerrar</button>
  </div>
  
  <div class="modal-content">
    <div class="tabs">
      <button class="tab active" data-tab="info">üìù Informaci√≥n</button>
      <button class="tab" data-tab="images">üì∑ Im√°genes</button>
      <button class="tab" data-tab="recipe">ü•ò Receta</button>
      <button class="tab" data-tab="combo" id="comboTab" style="display: none;">üçΩÔ∏è Combo</button>
    </div>
    
    <form id="productEditForm">
      <!-- Tab: Informaci√≥n -->
      <div class="tab-content active" data-content="info">
        <div class="form-grid">
          <div class="form-group">
            <label class="label">Nombre *</label>
            <input type="text" id="productName" class="input" required>
          </div>
          <div class="form-group">
            <label class="label">SKU</label>
            <input type="text" id="productSku" class="input">
          </div>
          <div class="form-group">
            <label class="label">Categor√≠a</label>
            <select id="productCategory" class="input">
              <option value="1">La Ruta 11</option>
              <option value="2">Sandwiches</option>
              <option value="3">Hamburguesas</option>
              <option value="4">Completos</option>
              <option value="5">Snacks</option>
              <option value="6">Personalizar</option>
              <option value="7">Extras</option>
              <option value="8">Combos</option>
              <option value="12">Papas</option>
            </select>
          </div>
        </div>
        
        <div class="form-group full">
          <label class="label">Descripci√≥n</label>
          <textarea id="productDescription" class="input textarea"></textarea>
        </div>
        
        <div class="form-grid">
          <div class="form-group">
            <label class="label">Precio *</label>
            <input type="text" id="productPrice" class="input" required>
          </div>
          <div class="form-group">
            <label class="label">Costo</label>
            <input type="text" id="productCost" class="input" readonly style="background: #f0f9ff;">
          </div>
          <div class="form-group">
            <label class="label">Estado</label>
            <select id="productStatus" class="input">
              <option value="1">Activo</option>
              <option value="0">Inactivo</option>
            </select>
          </div>
        </div>
      </div>
      
      <!-- Tab: Im√°genes -->
      <div class="tab-content" data-content="images">
        <div id="imageManagement">
          <p style="color: #666;">Gesti√≥n de im√°genes...</p>
        </div>
      </div>
      
      <!-- Tab: Receta -->
      <div class="tab-content" data-content="recipe">
        <div id="recipeManagement">
          <p style="color: #666;">Gesti√≥n de receta...</p>
        </div>
      </div>
      
      <!-- Tab: Combo -->
      <div class="tab-content" data-content="combo">
        <div id="comboManagement">
          <p style="color: #666;">Gesti√≥n de combo...</p>
        </div>
      </div>
    </form>
  </div>
  
  <div class="modal-actions">
    <button type="button" class="btn btn-secondary" id="cancelBtn">Cancelar</button>
    <button type="submit" class="btn btn-primary" id="saveBtn">üíæ Guardar Cambios</button>
  </div>
</div>

<script>
  // Variables globales
  let currentProductId = null;
  let currentProduct = null;
  
  // Abrir modal
  window.openProductModal = function(productId) {
    currentProductId = productId;
    const overlay = document.getElementById('productModalOverlay');
    const modal = document.getElementById('productModal');
    
    overlay.classList.add('active');
    modal.classList.add('active');
    
    // Cargar datos del producto
    loadProductData(productId);
  };
  
  // Cerrar modal
  function closeProductModal() {
    const overlay = document.getElementById('productModalOverlay');
    const modal = document.getElementById('productModal');
    
    overlay.classList.remove('active');
    modal.classList.remove('active');
    
    currentProductId = null;
    currentProduct = null;
  }
  
  // Event listeners
  document.getElementById('closeModalBtn')?.addEventListener('click', closeProductModal);
  document.getElementById('cancelBtn')?.addEventListener('click', closeProductModal);
  document.getElementById('productModalOverlay')?.addEventListener('click', closeProductModal);
  
  // Tabs
  document.querySelectorAll('.tab').forEach(tab => {
    tab.addEventListener('click', function() {
      const tabName = this.dataset.tab;
      
      // Actualizar tabs
      document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
      this.classList.add('active');
      
      // Actualizar contenido
      document.querySelectorAll('.tab-content').forEach(content => {
        content.classList.remove('active');
      });
      document.querySelector(`[data-content="${tabName}"]`)?.classList.add('active');
    });
  });
  
  // Cargar datos del producto
  async function loadProductData(productId) {
    try {
      const response = await fetch(`/api/get_productos.php?id=${productId}`);
      const product = await response.json();
      
      if (product.error) {
        alert('Error cargando producto');
        closeProductModal();
        return;
      }
      
      currentProduct = product;
      
      // Llenar formulario
      document.getElementById('productName').value = product.name || '';
      document.getElementById('productSku').value = product.sku || '';
      document.getElementById('productDescription').value = product.description || '';
      document.getElementById('productPrice').value = product.price ? formatPrice(product.price) : '';
      document.getElementById('productCost').value = product.cost_price ? formatPrice(product.cost_price) : '';
      document.getElementById('productCategory').value = product.category_id || '1';
      document.getElementById('productStatus').value = product.is_active !== undefined ? product.is_active.toString() : '1';
      
      // Mostrar tab de combo si es categor√≠a 8
      const comboTab = document.getElementById('comboTab');
      if (product.category_id == 8) {
        comboTab.style.display = 'block';
      } else {
        comboTab.style.display = 'none';
      }
      
      document.getElementById('modalTitle').textContent = `Editar: ${product.name}`;
      
    } catch (error) {
      alert('Error cargando producto: ' + error.message);
      closeProductModal();
    }
  }
  
  // Guardar cambios
  document.getElementById('saveBtn')?.addEventListener('click', async function(e) {
    e.preventDefault();
    
    if (!currentProductId) return;
    
    const btn = this;
    btn.disabled = true;
    btn.textContent = 'Guardando...';
    
    try {
      const formData = new FormData();
      formData.append('id', currentProductId);
      formData.append('name', document.getElementById('productName').value);
      formData.append('sku', document.getElementById('productSku').value);
      formData.append('description', document.getElementById('productDescription').value);
      formData.append('price', cleanPrice(document.getElementById('productPrice').value));
      formData.append('cost_price', cleanPrice(document.getElementById('productCost').value));
      formData.append('category_id', document.getElementById('productCategory').value);
      formData.append('is_active', document.getElementById('productStatus').value);
      
      const response = await fetch('/api/update_producto.php', {
        method: 'POST',
        body: formData
      });
      
      const result = await response.json();
      
      if (result.success) {
        alert('‚úÖ Producto actualizado correctamente');
        closeProductModal();
        
        // Recargar lista de productos
        if (window.loadProducts) {
          window.loadProducts();
        }
      } else {
        alert('‚ùå Error: ' + result.error);
      }
      
    } catch (error) {
      alert('‚ùå Error guardando: ' + error.message);
    } finally {
      btn.disabled = false;
      btn.textContent = 'üíæ Guardar Cambios';
    }
  });
  
  // Utilidades
  function formatPrice(value) {
    if (!value) return '';
    return parseInt(value).toLocaleString('es-CL');
  }
  
  function cleanPrice(value) {
    if (!value) return 0;
    return value.replace(/\./g, '').replace(/[^0-9]/g, '');
  }
  
  // Formateo autom√°tico de precios
  ['productPrice', 'productCost'].forEach(id => {
    const input = document.getElementById(id);
    if (!input) return;
    
    input.addEventListener('input', function(e) {
      const cleaned = cleanPrice(e.target.value);
      if (cleaned) {
        e.target.value = formatPrice(cleaned);
      }
    });
  });
</script>
