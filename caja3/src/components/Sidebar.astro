<script is:inline>
// Setup mobile sidebar
document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileSidebar = document.getElementById('mobile-sidebar');
    
    if (mobileMenuBtn && mobileSidebar) {
        mobileMenuBtn.addEventListener('click', function() {
            mobileSidebar.classList.toggle('hidden');
        });
        
        // Close on backdrop click
        mobileSidebar.addEventListener('click', function(e) {
            if (e.target === mobileSidebar || e.target.classList.contains('bg-black')) {
                mobileSidebar.classList.add('hidden');
            }
        });
    }
});

// Función para limpiar caché de la app
function clearAppCache() {
    // Mostrar confirmación
    if (!confirm('¿Estás seguro de que quieres limpiar el caché? Esto refrescará la página.')) {
        return;
    }
    
    // Limpiar todos los cachés excepto sessionStorage (mantiene sesión)
    try {
        // Limpiar localStorage
        localStorage.clear();
        
        // Limpiar cachés del navegador
        if ('caches' in window) {
            caches.keys().then(names => {
                names.forEach(name => {
                    caches.delete(name);
                });
            });
        }
        
        // Mostrar feedback visual
        const button = event.target.closest('button');
        const originalText = button.innerHTML;
        button.innerHTML = `
            <svg class="h-6 w-6 shrink-0 animate-spin" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
            </svg>
            Limpiando...
        `;
        
        // Recargar página después de un breve delay
        setTimeout(() => {
            window.location.reload(true);
        }, 1000);
        
    } catch (error) {
        console.error('Error limpiando caché:', error);
        alert('Error al limpiar el caché. Intenta recargar manualmente.');
    }
}
</script>

