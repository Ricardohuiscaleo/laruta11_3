				const whatsappEl = document.getElementById('whatsapp') as HTMLInputElement;
				const rutEl = document.getElementById('rut') as HTMLInputElement;
				const pesoEl = document.getElementById('peso') as HTMLInputElement;
				
				if (!nombreEl || !correoEl || !whatsappEl || !rutEl || !pesoEl) return;
				
				// Validar RUT chileno
				const rutValue = rutEl.value.replace(/[^0-9kK]/g, '');
				if (rutValue.length < 8 || rutValue.length > 9) {
					alert('Por favor ingresa un RUT v√°lido');
					btn.disabled = false;
					btn.innerHTML = '<i data-lucide="credit-card" class="w-5 h-5 mr-2"></i>Pagar Inscripci√≥n $5.000';
					return;
				}
				
				const mayor18El = document.getElementById('mayor18') as HTMLInputElement;
				
				const formData = {
					nombre: nombreEl.value,
					email: correoEl.value,
					telefono: whatsappEl.value,
					rut: rutEl.value,
					peso: parseInt(pesoEl.value),
