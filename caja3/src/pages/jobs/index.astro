                    document.getElementById('seconds')!.textContent = seconds.toString().padStart(2, '0');
                    
                    // Actualizar contadores en vista autenticada
                    const authDays = document.getElementById('auth-days');
                    const authHours = document.getElementById('auth-hours');
                    const authSeconds = document.getElementById('auth-seconds');
                    if (authDays) authDays.textContent = days.toString().padStart(2, '0');
                    if (authHours) authHours.textContent = hours.toString().padStart(2, '0');
                    if (authSeconds) authSeconds.textContent = seconds.toString().padStart(2, '0');
                } else {
                    // Tiempo expirado
                    document.getElementById('days')!.textContent = '00';
                    document.getElementById('hours')!.textContent = '00';
                    document.getElementById('minutes')!.textContent = '00';
                    document.getElementById('seconds')!.textContent = '00';
                    
                    document.getElementById('expired-message')!.classList.remove('hidden');
                    
                    // Deshabilitar botones de postulaci√≥n
                    const buttons = document.querySelectorAll('#card-maestro, #card-cajero, #btn-google-login');
                    buttons.forEach(btn => {
                        (btn as HTMLElement).style.opacity = '0.5';
                        (btn as HTMLElement).style.pointerEvents = 'none';
                    });
                    
                    clearInterval(countdownInterval);
                }
            }
            
            updateCountdown();
            const countdownInterval = setInterval(updateCountdown, 1000);
        }

        // Funci√≥n para trackear vista con ubicaci√≥n
        function trackQRViewWithLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(
                    function(position) {
                        const locationData = {
                            latitude: position.coords.latitude,
                            longitude: position.coords.longitude,
                            accuracy: position.coords.accuracy
                        };
                        
                        fetch('/api/tracker/track_qr_view.php', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(locationData)
                        }).catch(() => {});
                    },
                    function(error) {
                        // Si falla la ubicaci√≥n, registrar sin coordenadas
                        fetch('/api/tracker/track_qr_view.php', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({})
                        }).catch(() => {});
                    },
                    {
                        enableHighAccuracy: true,
                        timeout: 5000,
                        maximumAge: 300000
                    }
                );
            } else {
                // Navegador no soporta geolocalizaci√≥n
                fetch('/api/tracker/track_qr_view.php', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({})
                }).catch(() => {});
            }
        }

        // Inicializar cuando el DOM est√© listo
        document.addEventListener('DOMContentLoaded', function() {
            // Registrar vista del QR con ubicaci√≥n
            trackQRViewWithLocation();
            
            // Iniciar contador regresivo
            startCountdown();
            // Agregar event listeners para tarjetas clickeables
            document.getElementById('card-maestro')?.addEventListener('click', () => selectPosition('maestro'));
            document.getElementById('card-cajero')?.addEventListener('click', () => selectPosition('cajero'));
            document.getElementById('btn-google-login')?.addEventListener('click', handleGoogleLogin);

            
            // Verificar autenticaci√≥n al cargar
            checkAuthentication();

            // Manejar par√°metros de URL para login exitoso
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('login') === 'success') {
                window.history.replaceState({}, document.title, window.location.pathname);
                checkAuthentication();
            }
        });
    </script>
