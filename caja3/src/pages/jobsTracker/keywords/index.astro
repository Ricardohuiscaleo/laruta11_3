---
export const prerender = false;
import Sidebar from '../../../components/Sidebar.astro';
---

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="icon" type="image/png" href="/icon.png">
    <title>Keywords - Jobs Tracker</title>
    <link rel="manifest" href="/manifest.json">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; }
    </style>
</head>
<body class="bg-gray-50">

    <Sidebar currentPage="keywords" pageTitle="Keywords" />

    <!-- Main Content -->
    <main class="lg:pl-64">
        <div class="px-4 py-6 lg:px-8 max-w-6xl">
        
        <!-- Loading -->
        <div id="loading" class="text-center py-16">
            <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
            <p class="mt-2 text-gray-600">Cargando keywords...</p>
        </div>

        <!-- Stats Cards -->
        <div id="stats-section" class="hidden mb-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-white rounded-lg shadow p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Maestro Sanguchero</h3>
                <div class="space-y-2">
                    <div class="flex justify-between">
                        <span class="text-gray-600">Candidatos:</span>
                        <span id="maestro-candidates" class="font-medium">-</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Score Promedio:</span>
                        <span id="maestro-score" class="font-medium">-%</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Total Aplicaciones:</span>
                        <span id="maestro-applications" class="font-medium">-</span>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-lg shadow p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Cajero</h3>
                <div class="space-y-2">
                    <div class="flex justify-between">
                        <span class="text-gray-600">Candidatos:</span>
                        <span id="cajero-candidates" class="font-medium">-</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Score Promedio:</span>
                        <span id="cajero-score" class="font-medium">-%</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Total Aplicaciones:</span>
                        <span id="cajero-applications" class="font-medium">-</span>
                    </div>
                </div>
            </div>
            </div>
        </div>

        <!-- Keywords Editor -->
        <div id="keywords-section" class="hidden space-y-6">
            
            <!-- Keywords por Categoría -->
            <div class="bg-white rounded-lg shadow">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="text-lg font-medium text-gray-900">Categorías de Evaluación</h3>
                    <p class="text-sm text-gray-600 mt-1">Sistema actual con palabras clave en formato JSON</p>
                </div>
                <div id="keywords-list" class="p-6 space-y-4">
                    <!-- Keywords categories will be loaded here -->
                </div>
                <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
                    <button id="save-btn" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 font-medium">
                        Guardar Cambios
                    </button>
                </div>
            </div>

        </div>
        </div>
    </main>

    <script src="/js/global-auth.js" is:inline></script>
    <script src="/js/keywords.js" is:inline></script>
</body>
</html>