            { id: 403, name: 'Hamburguesa Doble', query: 'double burger' },
            { id: 404, name: 'Hamburguesa BBQ', query: 'bbq burger' },
            { id: 405, name: 'Hamburguesa Ruta 11', query: 'signature burger' }
        ];
        
        let imageData = [...localImagesData];
        let downloadedCount = 0;
        let failedCount = 0;
        const UNSPLASH_ACCESS_KEY = 'BanqJYPHGfqqCACbct84AzuSYYJ3mGxme_O5j-rA8as';

        function log(message) {
            const logEl = document.getElementById('log');
            logEl.innerHTML += `[${new Date().toLocaleTimeString()}] ${message}\n`;
            logEl.scrollTop = logEl.scrollHeight;
        }

        function updateProgress() {
            const total = imageData.length;
            const completed = downloadedCount + failedCount;
            const percentage = total > 0 ? (completed / total) * 100 : 0;
            
            document.getElementById('progress').style.width = percentage + '%';
            document.getElementById('downloaded-count').textContent = downloadedCount;
            document.getElementById('failed-count').textContent = failedCount;
        }

        async function downloadImage(url, filename, name) {
            try {
                log(`üîÑ Descargando: ${name}`);
                
                const response = await fetch(url);
                const blob = await response.blob();
                
                const link = document.createElement('a');
                link.href = URL.createObjectURL(blob);
                link.download = filename;
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
                URL.revokeObjectURL(link.href);
                
                downloadedCount++;
                log(`‚úÖ Completado: ${name}`);
                
            } catch (error) {
                failedCount++;
                log(`‚ùå Error: ${name} - ${error.message}`);
            }
            
            updateProgress();
        }

        async function downloadAll() {
            log('üöÄ Iniciando descarga masiva...');
            downloadedCount = 0;
            failedCount = 0;
            
            for (const img of imageData) {
                await downloadImage(img.url, img.filename, img.name);
                await new Promise(resolve => setTimeout(resolve, 800));
            }
            
            log(`üéâ Descarga completada! ‚úÖ${downloadedCount} ‚ùå${failedCount}`);
        }

        async function loadUnsplashImages() {
            log('üîç Cargando im√°genes de Unsplash...');
            
            for (const product of unsplashProductsData) {
                try {
                    log(`üîÑ Buscando: ${product.name}`);
                    const response = await fetch(`https://api.unsplash.com/search/photos?query=${encodeURIComponent(product.query)}&per_page=1&client_id=${UNSPLASH_ACCESS_KEY}`);
                    const data = await response.json();
                    
                    if (data.results && data.results[0]) {
                        const newImage = {
                            id: product.id,
                            name: product.name,
                            url: data.results[0].urls.regular,
                            filename: `${product.id}-${product.name.toLowerCase().replace(/[^a-z0-9]/g, '-')}.jpg`,
                            type: 'unsplash'
                        };
                        
                        imageData.push(newImage);
                        addImageToGrid(newImage);
                        log(`‚úÖ Encontrada: ${product.name}`);
                    }
                    
                    await new Promise(resolve => setTimeout(resolve, 1000));
                } catch (error) {
                    log(`‚ùå Error: ${product.name} - ${error.message}`);
                }
            }
            
            updateStats();
            log('üéâ Carga de Unsplash completada!');
        }

        function addImageToGrid(img) {
            const grid = document.querySelector('.image-grid');
            const card = document.createElement('div');
            card.className = 'image-card';
            card.innerHTML = `
                <img src="${img.url}" alt="${img.name}" class="image-preview" loading="lazy" />
                <div class="image-info">
                    <div class="image-name">${img.name}</div>
                    <div class="image-filename">${img.filename}</div>
                    <div class="image-type">üåê Unsplash</div>
                    <button class="download-btn" onclick="downloadImage('${img.url}', '${img.filename}', '${img.name}')">
                        üì• Descargar
                    </button>
                </div>
            `;
            grid.appendChild(card);
        }

        function updateStats() {
            document.getElementById('total-images').textContent = imageData.length;
        }

        function toggleLog() {
            const logEl = document.getElementById('log');
            logEl.style.display = logEl.style.display === 'none' ? 'block' : 'none';
        }

        // Hacer funciones globales
        window.downloadImage = downloadImage;
        window.downloadAll = downloadAll;
        window.loadUnsplashImages = loadUnsplashImages;
        window.toggleLog = toggleLog;
        
        updateProgress();
        log('üéØ P√°gina cargada. Listo para descargar im√°genes.');
    </script>
</body>
</html>