---
// Página de gestión de ingredientes
---
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ingredientes - La Ruta 11</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif; background: #fafafa; color: #0a0a0a; line-height: 1.6; }
    
    .container { max-width: 1200px; margin: 0 auto; padding: 32px; }
    .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 32px; }
    .title { font-size: 24px; font-weight: 700; }
    .btn { padding: 8px 16px; border-radius: 6px; border: none; font-size: 14px; font-weight: 500; cursor: pointer; transition: all 0.2s; text-decoration: none; display: inline-flex; align-items: center; gap: 8px; }
    .btn-primary { background: #0a0a0a; color: #ffffff; }
    .btn-primary:hover { background: #333; }
    .btn-secondary { background: #f5f5f5; color: #0a0a0a; }
    .btn-secondary:hover { background: #e5e5e5; }
    .btn-danger { background: #ef4444; color: #ffffff; }
    .btn-danger:hover { background: #dc2626; }
    
    .card { background: #ffffff; border: 1px solid #e5e5e5; border-radius: 8px; overflow: hidden; }
    .card-content { padding: 24px; }
    
    .toolbar { display: flex; align-items: center; gap: 16px; margin-bottom: 24px; }
    .search { position: relative; }
    .search input { padding: 8px 12px 8px 40px; border: 1px solid #e5e5e5; border-radius: 6px; font-size: 14px; width: 300px; }
    .search-icon { position: absolute; left: 12px; top: 50%; transform: translateY(-50%); color: #666; }
    
    .table { width: 100%; border-collapse: collapse; }
    .table th { text-align: left; padding: 12px; font-size: 12px; font-weight: 600; color: #666; text-transform: uppercase; letter-spacing: 0.5px; border-bottom: 1px solid #e5e5e5; }
    .table td { padding: 12px; border-bottom: 1px solid #f5f5f5; }
    .table tr:hover { background: #fafafa; }
    
    .input { width: 100%; padding: 12px; border: 1px solid #e5e5e5; border-radius: 6px; font-size: 14px; transition: border-color 0.2s; }
    .input:focus { outline: none; border-color: #0a0a0a; }
    
    .modal { position: fixed !important; top: 0 !important; left: 0 !important; width: 100% !important; height: 100% !important; background: rgba(0,0,0,0.5) !important; display: flex !important; align-items: center !important; justify-content: center !important; z-index: 1000 !important; }
    .modal-content { background: white !important; padding: 32px !important; border-radius: 12px !important; width: 90% !important; max-width: 600px !important; max-height: 90vh !important; overflow-y: auto !important; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25) !important; }
  </style>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="container">
    <div class="header">
      <h1 class="title">Gestión de Ingredientes</h1>
      <button class="btn btn-primary" onclick="addIngredient()">+ Nuevo Ingrediente</button>
    </div>
    
    <div class="card">
      <div class="card-content">
        <div class="toolbar">
          <div class="search">
            <svg class="search-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.35-4.35"/></svg>
            <input type="text" placeholder="Buscar ingredientes..." onkeyup="filterIngredients(this.value)">
          </div>
        </div>
        
        <table class="table" id="ingredientsTable">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Categoría</th>
              <th>Unidad</th>
              <th>Costo/Unidad</th>
              <th>Stock Actual</th>
              <th>Stock Mínimo</th>
              <th>Proveedor</th>
              <th>Estado</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td colspan="9" style="text-align: center; padding: 40px; color: #666;">Cargando ingredientes...</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  
  <script is:inline>
    window.loadIngredients = function() {
      fetch('/api/get_ingredientes.php?t=' + Date.now())
        .then(r => r.json())
        .then(data => {
          console.log('Ingredientes cargados:', data.length);
          const tbody = document.querySelector('#ingredientsTable tbody');
          if (!tbody) return;
          
          if (Array.isArray(data) && data.length > 0) {
            console.log('Renderizando', data.length, 'ingredientes');
            tbody.innerHTML = data.map(ingredient => `
              <tr>
                <td>
                  <div style="font-weight: 600;">${ingredient.name}</div>
                </td>
                <td>
                  <span style="padding: 2px 6px; background: #f3f4f6; border-radius: 4px; font-size: 11px;">${ingredient.category}</span>
                </td>
                <td>${ingredient.unit}</td>
                <td>
                  <div style="font-weight: 600;">$${parseFloat(ingredient.cost_per_unit || 0).toLocaleString('es-CL')}</div>
                </td>
                <td>
                  <div style="color: ${parseFloat(ingredient.current_stock) <= parseFloat(ingredient.min_stock_level) ? '#ef4444' : '#22c55e'}; font-weight: 600;">
                    ${parseFloat(ingredient.current_stock || 0).toLocaleString('es-CL')} ${ingredient.unit}
                  </div>
                </td>
                <td>${parseFloat(ingredient.min_stock_level || 0).toLocaleString('es-CL')} ${ingredient.unit}</td>
                <td>${ingredient.supplier || 'Sin proveedor'}</td>
                <td>
                  <span style="padding: 4px 8px; border-radius: 12px; font-size: 11px; background: ${ingredient.is_active == 1 ? '#dcfce7' : '#fef2f2'}; color: ${ingredient.is_active == 1 ? '#166534' : '#dc2626'};">
                    ${ingredient.is_active == 1 ? 'Activo' : 'Inactivo'}
                  </span>
                </td>
                <td>
                  <button class="btn btn-secondary" onclick="editIngredient(${ingredient.id})" style="font-size: 12px; padding: 4px 8px;">Editar</button>
                  <button class="btn btn-danger" onclick="deleteIngredient(${ingredient.id})" style="font-size: 12px; padding: 4px 8px;">Eliminar</button>
                </td>
              </tr>
            `).join('');
          } else {
            tbody.innerHTML = '<tr><td colspan="9" style="text-align: center; padding: 40px; color: #666;">No hay ingredientes registrados</td></tr>';
          }
        })
        .catch(error => {
          console.error('Error loading ingredients:', error);
          const tbody = document.querySelector('#ingredientsTable tbody');
          if (tbody) tbody.innerHTML = '<tr><td colspan="9" style="text-align: center; padding: 40px; color: #ef4444;">Error al cargar ingredientes</td></tr>';
        });
    };
    
    // Cargar ingredientes al iniciar
    loadIngredients();
  </script>
</body>
</html>
